---
import Box from '@/components/box.astro';
import * as Field from '@/components/field';
import * as Fieldset from '@/components/fieldset';
import Switch from '@/components/switch.astro';
import Layout from '@/layouts/index.astro';
---

<Layout>
  <Box class="flex flex-col gap-6">
    <Box class="flex flex-wrap items-center gap-6">
      <Switch variant="solid" aria-label="Notifications" />
      <Switch variant="solid-outline" aria-label="Notifications" />
      <Switch variant="soft" aria-label="Notifications" />
      <Switch variant="soft-outline" aria-label="Notifications" />
      <Switch variant="outline" aria-label="Notifications" />
    </Box>
    <Box class="flex flex-wrap items-center gap-6">
      <Switch variant="solid" elevation="1" aria-label="Notifications" />
      <Switch variant="solid-outline" elevation="1" aria-label="Notifications" />
      <Switch variant="soft" elevation="1" aria-label="Notifications" />
      <Switch variant="soft-outline" elevation="1" aria-label="Notifications" />
      <Switch variant="outline" elevation="1" aria-label="Notifications" />
    </Box>
    <Box class="flex flex-wrap items-center gap-6">
      <Switch variant="solid" elevation="2" aria-label="Notifications" />
      <Switch variant="solid-outline" elevation="2" aria-label="Notifications" />
      <Switch variant="soft" elevation="2" aria-label="Notifications" />
      <Switch variant="soft-outline" elevation="2" aria-label="Notifications" />
      <Switch variant="outline" elevation="2" aria-label="Notifications" />
    </Box>
    <Box class="flex flex-wrap items-center gap-6">
      <Switch variant="solid" elevation="3" aria-label="Notifications" />
      <Switch variant="solid-outline" elevation="3" aria-label="Notifications" />
      <Switch variant="soft" elevation="3" aria-label="Notifications" />
      <Switch variant="soft-outline" elevation="3" aria-label="Notifications" />
      <Switch variant="outline" elevation="3" aria-label="Notifications" />
    </Box>
    <Box class="flex flex-wrap items-center gap-6">
      <Switch variant="solid" disabled aria-label="Notifications" />
      <Switch variant="solid-outline" disabled aria-label="Notifications" />
      <Switch variant="soft" disabled aria-label="Notifications" />
      <Switch variant="soft-outline" disabled aria-label="Notifications" />
      <Switch variant="outline" disabled aria-label="Notifications" />
    </Box>
    <Box class="flex flex-wrap items-end gap-6">
      <Switch size="1" aria-label="Notifications" />
      <Switch size="2" aria-label="Notifications" />
      <Switch size="3" aria-label="Notifications" />
      <Switch size="4" aria-label="Notifications" />
      <Switch size="5" aria-label="Notifications" />
    </Box>
    <Box class="my-12 flex flex-wrap items-start gap-6">
      <Switch>Enable notifications</Switch>
      <Switch disabled>Enable notifications</Switch>
      <Field.Root>
        <Switch>Enable notifications</Switch>
        <Field.Description>Receive email notification updates</Field.Description>
      </Field.Root>
      <Field.Root>
        <Switch disabled>Enable notifications</Switch>
        <Field.Description>Receive email notification updates</Field.Description>
      </Field.Root>
    </Box>
    <Box class="mb-12 flex flex-wrap items-start gap-6">
      <Box rounded class="p-6">
        <Fieldset.Root class="slot-[switch]:w-60 slot-[switch]:justify-between">
          <Fieldset.Legend>Notification Settings</Fieldset.Legend>
          <Fieldset.Controls>
            <Switch>Enable notifications</Switch>
            <Switch>Enable marketing emails</Switch>
            <Switch>Enable SMS alerts</Switch>
          </Fieldset.Controls>
        </Fieldset.Root>
      </Box>
      <Box rounded class="p-6">
        <Fieldset.Root class="slot-[switch]:w-70 slot-[switch]:justify-between">
          <Fieldset.Legend>Notification Settings</Fieldset.Legend>
          <Fieldset.Controls>
            <Field.Root>
              <Switch>Enable notifications</Switch>
              <Field.Description>Receive email notification updates</Field.Description>
            </Field.Root>
            <Field.Root>
              <Switch>Enable marketing emails</Switch>
              <Field.Description>Get the latest news and offers</Field.Description>
            </Field.Root>
            <Field.Root>
              <Switch>Enable SMS alerts</Switch>
              <Field.Description>Receive important alerts via SMS</Field.Description>
            </Field.Root>
          </Fieldset.Controls>
        </Fieldset.Root>
      </Box>
      <Box rounded class="p-6">
        <Fieldset.Root class="slot-[switch]:w-70 slot-[switch]:justify-between">
          <Fieldset.Legend>Notification Settings</Fieldset.Legend>
          <Fieldset.Description>Manage your notification preferences below</Fieldset.Description>
          <Fieldset.Controls>
            <Field.Root>
              <Switch>Enable notifications</Switch>
              <Field.Description>Receive email notification updates</Field.Description>
            </Field.Root>
            <Field.Root>
              <Switch>Enable marketing emails</Switch>
              <Field.Description>Get the latest news and offers</Field.Description>
            </Field.Root>
            <Field.Root>
              <Switch>Enable SMS alerts</Switch>
              <Field.Description>Receive important alerts via SMS</Field.Description>
            </Field.Root>
          </Fieldset.Controls>
        </Fieldset.Root>
      </Box>
    </Box>
    <Box class="mb-12 flex flex-wrap items-start gap-6">
      <Box rounded elevation="3" variant="soft-outline" class="p-6">
        <Fieldset.Root class="slot-[switch]:w-60 slot-[switch]:justify-between">
          <Fieldset.Legend>Notification Settings</Fieldset.Legend>
          <Fieldset.Controls>
            <Switch elevation="1" variant="solid-outline">Enable notifications</Switch>
            <Switch elevation="1" variant="solid-outline">Enable marketing emails</Switch>
            <Switch elevation="1" variant="solid-outline">Enable SMS alerts</Switch>
          </Fieldset.Controls>
        </Fieldset.Root>
      </Box>
      <Box rounded elevation="3" variant="soft-outline" class="p-6">
        <Fieldset.Root class="slot-[switch]:w-70 slot-[switch]:justify-between">
          <Fieldset.Legend>Notification Settings</Fieldset.Legend>
          <Fieldset.Controls>
            <Field.Root>
              <Switch elevation="1" variant="solid-outline">Enable notifications</Switch>
              <Field.Description>Receive email notification updates</Field.Description>
            </Field.Root>
            <Field.Root>
              <Switch elevation="1" variant="solid-outline">Enable marketing emails</Switch>
              <Field.Description>Get the latest news and offers</Field.Description>
            </Field.Root>
            <Field.Root>
              <Switch elevation="1" variant="solid-outline">Enable SMS alerts</Switch>
              <Field.Description>Receive important alerts via SMS</Field.Description>
            </Field.Root>
          </Fieldset.Controls>
        </Fieldset.Root>
      </Box>
      <Box rounded elevation="3" variant="soft-outline" class="p-6">
        <Fieldset.Root class="slot-[switch]:w-70 slot-[switch]:justify-between">
          <Fieldset.Legend>Notification Settings</Fieldset.Legend>
          <Fieldset.Description>Manage your notification preferences below</Fieldset.Description>
          <Fieldset.Controls>
            <Field.Root>
              <Switch elevation="1" variant="solid-outline">Enable notifications</Switch>
              <Field.Description>Receive email notification updates</Field.Description>
            </Field.Root>
            <Field.Root>
              <Switch elevation="1" variant="solid-outline">Enable marketing emails</Switch>
              <Field.Description>Get the latest news and offers</Field.Description>
            </Field.Root>
            <Field.Root>
              <Switch elevation="1" variant="solid-outline">Enable SMS alerts</Switch>
              <Field.Description>Receive important alerts via SMS</Field.Description>
            </Field.Root>
          </Fieldset.Controls>
        </Fieldset.Root>
      </Box>
    </Box>
    <Box class="flex flex-wrap items-center gap-6">
      <Box rounded elevation="3" variant="soft-outline" class="p-6">
        <Fieldset.Root>
          <Fieldset.Legend>Notification Settings</Fieldset.Legend>
          <Fieldset.Controls orientation="horizontal">
            <Switch elevation="1" variant="solid-outline">Enable notifications</Switch>
            <Switch elevation="1" variant="solid-outline">Enable marketing emails</Switch>
            <Switch elevation="1" variant="solid-outline">Enable SMS alerts</Switch>
          </Fieldset.Controls>
        </Fieldset.Root>
      </Box>
      <Box rounded elevation="3" variant="soft-outline" class="p-6">
        <Fieldset.Root>
          <Fieldset.Legend>Notification Settings</Fieldset.Legend>
          <Fieldset.Description>Manage your notification preferences below</Fieldset.Description>
          <Fieldset.Controls orientation="horizontal">
            <Switch elevation="1" variant="solid-outline">Enable notifications</Switch>
            <Switch elevation="1" variant="solid-outline">Enable marketing emails</Switch>
            <Switch elevation="1" variant="solid-outline">Enable SMS alerts</Switch>
          </Fieldset.Controls>
        </Fieldset.Root>
      </Box>
    </Box>
  </Box>
</Layout>
